# .screenrc

# Status bar
caption always "%{= kw}%-w%{= BW}%n %t%{-}%+w %-= @%H - %Y-%m-%d %c"

# Start default sessions
screen 1
screen 2
screen 3
screen 4
select 1

# Fix backspace, delete
# Source: http://www.emacswiki.org/emacs/GnuScreen
bindkey -k kb # backspace
bindkey -d -k kb

bindkey -k kD # delete
bindkey -d -k kD
